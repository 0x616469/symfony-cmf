<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="sonata.block.repository" class="Symfony\Cmf\Bundle\BlockBundle\Document\BlockRepository" public="false">
            <argument type="service" id="service_container" />
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager" />
        </service>

        <service id="symfony_cmf.block.simple" class="Symfony\Cmf\Bundle\BlockBundle\Block\SimpleBlockService">
            <tag name="sonata.block" />
            <argument>symfony_cmf.block.simple</argument>
            <argument type="service" id="templating" />
        </service>

    </services>
</container>
